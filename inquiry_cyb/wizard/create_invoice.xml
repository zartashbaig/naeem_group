<?xml version="1.0" encoding="utf-8" ?>
<odoo>


    <!-- FORM VIEW  -->

    <record id="view_transientmodel_wizard_form" model="ir.ui.view">
        <field name="name">transient.form</field>
        <field name="model">create.saleorder</field>
        <field name="arch" type="xml">
            <form string="Sale Order">
                <p class="oe_grey"></p>
                <group>
                    <group>
                        <field name="so_id" invisible="1"/>
                        <field name="inquirymany_id" widget="many2many_tags"/>
                        <field name="partner_id"/>
                        <field name="ref_id"/>
                        <field name="crm_lead_id"/>
                    </group>
                    <group>
                        <field name="inquiry_type"/>
                        <field name="date_inquiry"/>
                        <field name="date_Expiration"/>
                    </group>
                </group>

                <group>
                    <field name="new_order_line_ids" nolabel="1">
                        <tree create="0">
                            <field name="brand_id" force_save="1"/>
                            <field name="product_id" force_save="1"/>
                            <field name="name" force_save="1"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom" groups="uom.group_uom" class="oe_inline"/>
                            <field name="qty_delivered" invisible="1"/>
                            <field name="qty_invoiced" invisible="1"/>
                            <field name="price_unit"/>
                            <field name="tax_id" widget="many2many_tags" options="{'no_create': True}" optional="show"/>
                            <field name="price_subtotal"/>
                            <field name="price_total"/>
                                                        <field name="remarks"/>

                            <!--                            <control>-->
                            <!--                                <create name="add_section_control" string="Add a section"-->
                            <!--                                        context="{'default_display_type': 'line_section'}"/>-->
                            <!--                            </control>-->
                            <!--                            <field name="display_type" invisible="1"/>-->


                            <!--                            <field name="discount"/>-->
                        </tree>
                    </field>
                </group>

                <group>
                    <group>
                        <field name="ks_global_discount_type"/>
                        <field name="ks_global_discount_rate"/>
                        <field name="ks_amount_discount"/>
                    </group>
                </group>

                <group>
                    <field name="notes"/>
                </group>


                <footer>
                    <button name="action_create_sale_order" string="Create Quotation" type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ACTION     -->

    <record id="action_transientmodel_wizard" model="ir.actions.act_window">
        <field name="name">Create Quotation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.saleorder</field>
        <field name="view_id" ref="inquiry_cyb.view_transientmodel_wizard_form"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>



